<h2><%=@user.username.capitalize%>'s Library</h2>

<% if @user.id == session[:user_id] %>
  <a href="/books/new">Add to your Library</a>
<%end%>


<% @user.shelves.each do |shelf| %>
  <h3> <%=shelf.name%> </h3>
    <% shelf.books.each do |book| %>
      <ul>
        <li> <%= book.title %> by <%= book.author %>
      </ul>
    <% end %>
  <% end %>