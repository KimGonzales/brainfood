<% if flash.has?(:message) %>
  <h2><%= flash[:message] %> </h2>
<% end %>

<h3> Add a New Book To Your Library</h3>

  <form method='POST' action='/books'>
    <h4>Book Details</h4>
    
    <table>

      <tr>
        <td><label>Title:</td>
        <td><input type='text' name='book[title]' placeholder="What's it called?" required>
        </label></td>
      </tr>

      <tr>
        <td><label>Author:</td>
        <td><input type='text' name='book[author]' placeholder='Who wrote it?' required>
        </label></td>
      </tr>

      <tr>
        <td><label>Favorite Quote:</td>
        <td><textarea type='text' name='book[quote]' placeholder='Inspire Us!' required rows="5" cols="60"></textarea>
        </label></td>
      </tr>
    </table>

    <h4>Which Bookshelf Would You Like to place this Book On?</h4>
    <p>Choose an Existing Shelf<p>

    <% if @user.shelves.empty? %>
      <p>[Looks like you should create your first Bookshelf!] </p>
    <% end %>

    <% @user.shelves.each do | shelf |%>
      <input type='radio' name='book[shelf_id]' id='shelf.name' value='<%=shelf.id%>'>
        <%=shelf.name%></input>
      <% end %><br/>

      <p> or Create Shelf </p>
        <input type='text' name='shelf[name]' placeholder='new shelf name'/><br/>
    
    <input type='submit' value='Create Book' id='submit'>
  </form>