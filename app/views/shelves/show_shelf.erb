<% if flash.has?(:notice) %>
  <%= flash[:notice] %><br/>
<% end %>


<h3><a href='/users/<%=@shelf.user.slug%>'>
  @<%=@shelf.user.name%></a>'s <%=@shelf.name%> BookShelf</h3>

    <div>has these great Books: </div>

      <% @shelf.books.each do |book| %>
        <ul>
          <li><a href='/books/<%=book.id%>'>
            <%= book.title %> </a>
          </li>
        </ul>
      <% end %>

<% if @shelf.user == current_user %>
  <form method='GET' action='/shelves/<%=@shelf.id%>/edit'>
    <input type='submit' value='Edit Shelf'/>
  </form>
<% end %>


