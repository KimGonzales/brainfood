<h3><a href'/users/<%=@shelf.user.id%>'>
  @<%=@shelf.user.name%></a>'s <%=@shelf.name%> BookShelf</h3>

    <div>holds these great reads: </div>

      <% @shelf.books.each do |book| %>
        <ul>
          <li><a href='/books/<%=book.id%>'>
            <%= book.title %> </a>
          </li>
        </ul>
      <% end %>

<form method='GET' action='/shelves/<%=@shelf.id%>/edit'>
  <input type='submit' value='Edit'/>
</form>

<form method='POST' action='/shelves/<%=@shelf.id%>/delete'>
  <input type='hidden' id='hidden' name='_method' value='DELETE'>
  <input type='submit' value='Delete Shelf'>
</form>



